  <!-- Apartado protegido -->
  <div class="respuestas" id="respuestas">
    <h2>Respuestas Almacenadas</h2>
  </div>

  <!-- Login para ver respuestas -->
  <div style="max-width:800px; margin:40px auto; background:white; padding:20px; border-radius:10px; box-shadow:0 4px 6px rgba(0,0,0,0.1);">
    <h2>Acceso a Respuestas</h2>
    <label>Introduce tu correo electrónico autorizado:</label>
    <input type="email" id="correo" placeholder="ejemplo@correo.com">
    <button onclick="accederRespuestas()">Acceder</button>
    <p id="mensaje" style="color:red; font-weight:bold;"></p>
  </div>

  <script>
    const formulario = document.getElementById('formulario');
    const respuestasDiv = document.getElementById('respuestas');
    const mensaje = document.getElementById('mensaje');

    // Lista de correos autorizados
    const correosAutorizados = ["doctor1@hospital.com", "jefe@hospital.com"];

    formulario.addEventListener('submit', function(e) {
      e.preventDefault();

      const nombre = document.getElementById('nombre').value;
      const datos = new FormData(formulario);

      let textoArchivo = `Nombre y Rango: ${nombre}\\n\\n`;
      let respuestasHTML = `<div class='respuesta'><strong>Nombre y Rango:</strong> ${nombre}<br><br>`;

      datos.forEach((valor, clave) => {
        if(clave !== 'nombre'){
          textoArchivo += `${clave}: ${valor}\\n\\n`;
          respuestasHTML += `<strong>${clave.toUpperCase()}:</strong> ${valor}<br><br>`;
        }
      });

      respuestasHTML += '</div>';
      respuestasDiv.innerHTML += respuestasHTML;

      // Crear archivo de texto descargable
      const blob = new Blob([textoArchivo], { type: 'text/plain' });
      const enlace = document.createElement('a');
      enlace.href = URL.createObjectURL(blob);
      enlace.download = `${nombre.replace(/\\s+/g, '_')}_respuestas.txt`;
      enlace.click();

      formulario.reset();
    });

    function accederRespuestas() {
      const correoIngresado = document.getElementById('correo').value;
      if (correosAutorizados.includes(correoIngresado)) {
        respuestasDiv.style.display = 'block';
        mensaje.textContent = '';
      } else {
        respuestasDiv.style.display = 'none';
        mensaje.textContent = 'Acceso denegado. Correo no autorizado.';
      }
    }
  </script>
